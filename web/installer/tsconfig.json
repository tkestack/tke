{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./tsbuild",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "noLib": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@tea/app": ["./node_modules/@tencent/tea-app"],
      "@tea/app/*": ["./node_modules/@tencent/tea-app/lib/*"],
      "@tea/component": ["./node_modules/@tencent/tea-component/lib"],
      "@tea/component/*": ["./node_modules/@tencent/tea-component/lib/*"],
      "@tencent/qcloud-lib": ["./node_modules/@tencent/qcloud-lib"],
      "@tencent/qcloud-lib/*": ["./node_modules/@tencent/qcloud-lib/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"],
  "compoileOnSave": false
}
