{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./tsbuild",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "noLib": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tencent/ff-validator": ["./lib/ff-validator"],
      "@tencent/ff-validator/*": ["./lib/ff-validator/*"],
      "@tencent/ff-redux": ["./lib/ff-redux"],
      "@tencent/ff-redux/*": ["./lib/ff-redux/*"],
      "@tencent/ff-component": ["./lib/ff-component/"],
      "@tencent/ff-component/*": ["./lib/ff-component/*"],
      "@tencent/tea-component": ["./node_modules/tea-component/"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "lib"],
  "compoileOnSave": false
}
