{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "core/*": [
        "src/core/*"
      ],
      "charts/*": [
        "src/charts/*"
      ],
      "tea-components/*": [
        "src/tea-components/*"
      ],
      "panel/*": [
        "src/panel/*"
      ]
    },
    "moduleResolution": "node",
    "jsx": "react",
    "module": "esnext",
    "outDir": "./ts-dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "noLib": false,
    "experimentalDecorators": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}